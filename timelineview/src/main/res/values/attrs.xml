<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TimelineView">
        <attr name="timeline_math_strategy" format="enum">
            <enum name="SNAKE" value="0" />
            <enum name="LINEAR_VERTICAL" value="1" />
            <enum name="LINEAR_HORIZONTAL" value="2" />
        </attr>
        <attr name="timeline_math_strategy_id" format="string" />
        <attr name="timeline_ui_strategy" format="enum">
            <enum name="SNAKE" value="0" />
            <enum name="LINEAR" value="1" />
        </attr>
        <attr name="timeline_ui_strategy_id" format="string" />
        <attr name="timeline_start_position" format="enum">
            <enum name="START" value="0" />
            <enum name="CENTER" value="1" />
            <enum name="END" value="2" />
        </attr>
        <attr name="timeline_progress_color" format="color" />
        <attr name="timeline_stroke_color" format="color" />
        <attr name="timeline_title_color" format="color" />
        <attr name="timeline_description_color" format="color" />

        <attr name="timeline_progress_icon" format="reference" />
        <attr name="timeline_disable_icon" format="reference" />

        <attr name="timeline_stroke_size" format="dimension" />
        <attr name="timeline_title_size" format="dimension" />
        <attr name="timeline_description_size" format="dimension" />
        <attr name="timeline_radius_size" format="dimension" />
        <attr name="timeline_step_y_size" format="dimension" />
        <attr name="timeline_step_y_first_size" format="dimension" />

        <attr name="timeline_margin_top_title" format="dimension" />
        <attr name="timeline_margin_top_description" format="dimension" />
        <attr name="timeline_margin_top_progress_icon" format="dimension" />
        <attr name="timeline_margin_horizontal_image" format="dimension" />
        <attr name="timeline_margin_horizontal_text" format="dimension" />
        <attr name="timeline_margin_horizontal_stroke" format="dimension" />

        <attr name="timeline_image_lvl_size" format="dimension" />
        <attr name="timeline_icon_progress_size" format="dimension" />

        <attr name="timeline_description_mode" format="enum">
            <enum name="SINGLE_LINE" value="0" />
            <enum name="MULTI_LINE" value="1" />
            <enum name="ELLIPSIZE_END" value="2" />
        </attr>
        <attr name="timeline_title_mode" format="enum">
            <enum name="SINGLE_LINE" value="0" />
            <enum name="MULTI_LINE" value="1" />
            <enum name="ELLIPSIZE_END" value="2" />
        </attr>
        <attr name="timeline_max_lines_description" format="integer" />
        <attr name="timeline_text_max_width_mode" format="enum">
            <enum name="AUTO_FROM_LAYOUT" value="0" />
            <enum name="FIXED" value="1" />
        </attr>
        <attr name="timeline_text_max_width" format="dimension" />
    </declare-styleable>
</resources>
